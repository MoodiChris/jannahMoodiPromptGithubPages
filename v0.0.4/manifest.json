{
  "name": "Jannah - Islamic Habit Tracker",
  "short_name": "Jannah",
  "description": "A comprehensive Islamic habit tracking application for spiritual growth and daily practice management",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#008B8B",
  "orientation": "portrait-primary",
  "scope": "./",
  "lang": "en",
  "dir": "ltr",
  "categories": ["lifestyle", "productivity", "health"],
