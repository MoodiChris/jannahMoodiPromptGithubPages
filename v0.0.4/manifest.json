    }
  ],
  "shortcuts": [
    {
      "name": "Prayer Times",
      "short_name": "Prayers",
      "description": "View today's prayer times and schedule",
      "url": "./?tab=home",
      "icons": [
        {
          "src": "./icons/prayer-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Habit Tracker",
      "short_name": "Habits",
      "description": "Track and manage your daily Islamic habits",
      "url": "./?tab=habits",
      "icons": [
        {
          "src": "./icons/habits-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Quran Reader",
      "short_name": "Quran",
      "description": "Read and study the Holy Quran",
      "url": "./?tab=quran",
      "icons": [
        {
          "src": "./icons/quran-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Qibla Compass",
      "short_name": "Qibla",
      "description": "Find the direction of prayer",
      "url": "./?tab=qibla",
      "icons": [
        {
          "src": "./icons/qibla-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "protocol_handlers": [
    {
      "protocol": "web+jannah",
      "url": "./?action=%s"
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
